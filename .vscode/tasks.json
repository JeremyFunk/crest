{
    "version": "2.0.0",
    "tasks": [
        {
            "command": "fish build.fish && ./executable ",
            "label": "Run ASM",
            "type": "shell",
            "problemMatcher": []
        },
        {
            "label": "BG: Build code",
            "group": "build",
            "command": "yarn",
            "args": ["tsc", "--watch"],
            "problemMatcher": {
              "base": "$tsc-watch",
              "fileLocation": ["relative", "${workspaceRoot}/src"]
            },
            "options": {
              "cwd": "${workspaceFolder}/src"
            },
            "isBackground": true,
            "runOptions": {
              "runOn": "folderOpen"
            },
            "presentation": {
              "panel": "dedicated",
              "reveal": "never"
            }
        }
    ]
}
